{% extends 'base.html.twig' %}

{% block title %}{{ book.title }} - szczegóły{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto mt-10 px-4">
        <div class="rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm">
            <h1 class="text-3xl font-semibold tracking-tight text-zinc-900 mb-6">{{ book.title }}</h1>

            <div class="mb-4">
                <span class="font-medium text-zinc-800">Autor:</span>
                <span class="ml-1 text-zinc-700">{{ book.author }}</span>
            </div>

            <div class="mb-4">
                <span class="font-medium text-zinc-800">Opis:</span>
                <p class="mt-1 text-zinc-700 leading-relaxed">
                    {{ book.description is not empty ? book.description : 'Brak opisu.' }}
                </p>
            </div>

            <form method="post" action="{{ path('book_show', { id: book.id }) }}" class="mb-8">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block font-medium text-zinc-800 mb-1">Status</label>
                        <label>
                            <select name="status"
                                    onchange="this.form.requestSubmit()"
                                    class="w-full rounded-xl border border-zinc-300 bg-white px-3 py-2.5 text-zinc-900 shadow-sm outline-none transition focus:border-sky-500 focus:ring-4 focus:ring-sky-100">
                                <option value="planned"  {{ book.status == 'planned'  ? 'selected' : '' }}>Planowana</option>
                                <option value="reading"  {{ book.status == 'reading'  ? 'selected' : '' }}>Czytana</option>
                                <option value="finished"     {{ book.status == 'finished'     ? 'selected' : '' }}>Przeczytana</option>
                            </select>
                        </label>
                    </div>

                    <div>
                        <label class="block font-medium text-zinc-800 mb-1">Ocena (1–10)</label>
                        <label>
                            <input type="number" name="rating" min="1" max="10"
                                   value="{{ book.rating is not null ? book.rating : '' }}"
                                   onchange="this.form.requestSubmit()"
                                   class="w-full rounded-xl border border-zinc-300 bg-white px-3 py-2.5 text-zinc-900 shadow-sm outline-none transition focus:border-sky-500 focus:ring-4 focus:ring-sky-100">
                        </label>
                    </div>
                </div>
            </form>

            <div class="mb-4">
                <span class="font-medium text-zinc-800">Dodano:</span>
                <span class="ml-1 text-zinc-700">{{ book.createdAt|date('Y-m-d H:i') }}</span>
            </div>

            <div class="mb-8">
                <span class="font-medium text-zinc-800">Właściciel (email):</span>
                <span class="ml-1 text-zinc-700">{{ book.user ? book.user.email : '—' }}</span>
            </div>

            <div class="flex gap-3">
                {% if isOwner %}
                    <a href="{{ path('book_edit', {id: book.id}) }}"
                       class="inline-block rounded-xl border border-zinc-300 bg-sky-500 px-5 py-2.5 text-sm font-medium text-white shadow-sm transition hover:bg-zinc-50 hover:text-black active:translate-y-px focus:outline-none focus:ring-4 focus:ring-zinc-200">
                        Edytuj
                    </a>
                {% endif %}
                <a href="{{ path('home') }}"
                   class="inline-block rounded-xl border border-zinc-300 bg-sky-500 px-5 py-2.5 text-sm font-medium text-white shadow-sm transition hover:bg-zinc-50 hover:text-black active:translate-y-px focus:outline-none focus:ring-4 focus:ring-zinc-200">
                    Powrót do listy książek
                </a>
            </div>
        </div>
    </div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const statusSelect = document.querySelector('select[name="status"]');
        const ratingInput = document.querySelector('input[name="rating"]');

        function updateRatingVisibility() {
            if (statusSelect.value !== 'finished') {
                ratingInput.disabled = true;
                ratingInput.value = '';
                ratingInput.placeholder = 'Ocena dostępna tylko dla przeczytanych książek';
            } else {
                ratingInput.disabled = false
                ratingInput.placeholder = 'Wprowadź ocenę (1–10)';
            }
        }
        statusSelect.addEventListener('change', updateRatingVisibility);
        updateRatingVisibility();
    });

</script>
{% endblock %}



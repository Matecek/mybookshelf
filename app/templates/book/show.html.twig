{% extends 'base.html.twig' %}

{% block title %}{{ book.title }} - szczegóły{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto mt-10 px-4">
        <div class="rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm">
            <h1 class="text-3xl font-semibold tracking-tight text-zinc-900 mb-6">{{ book.title }}</h1>

            <div class="mb-4">
                <span class="font-medium text-zinc-800">Autor:</span>
                <span class="ml-1 text-zinc-700">{{ book.author }}</span>
            </div>

            <div class="mb-4">
                <span class="font-medium text-zinc-800">Opis:</span>
                <p class="mt-1 text-zinc-700 leading-relaxed">
                    {{ book.description is not empty ? book.description : 'Brak opisu.' }}
                </p>
            </div>

            <div class="mb-4">
                <span class="font-medium text-zinc-800">Status:</span>
                <span class="ml-1 text-zinc-700">
        {% if book.status == 'planned' %}Planowana
        {% elseif book.status == 'reading' %}Czytana
        {% else %}Przeczytana{% endif %}
      </span>
            </div>

            <div class="mb-4">
                <span class="font-medium text-zinc-800">Ocena:</span>
                <span class="ml-1 text-zinc-700">{{ book.rating is not null ? book.rating ~ '/10' : '—' }}</span>
            </div>

            <div class="mb-4">
                <span class="font-medium text-zinc-800">Dodano:</span>
                <span class="ml-1 text-zinc-700">{{ book.createdAt|date('Y-m-d H:i') }}</span>
            </div>

            <div class="mb-8">
                <span class="font-medium text-zinc-800">Właściciel (email):</span>
                <span class="ml-1 text-zinc-700">{{ book.user ? book.user.email : '—' }}</span>
            </div>

            <div class="flex gap-3">
                <a href="{{ path('book_edit', {id: book.id}) }}"
                   class="inline-block rounded-xl border border-zinc-300 bg-sky-500 px-5 py-2.5 text-sm font-medium text-white shadow-sm transition hover:bg-zinc-50 hover:text-black active:translate-y-px focus:outline-none focus:ring-4 focus:ring-zinc-200">
                    Edytuj
                </a>
                <a href="{{ path('home') }}"
                   class="inline-block rounded-xl border border-zinc-300 bg-sky-500 px-5 py-2.5 text-sm font-medium text-white shadow-sm transition hover:bg-zinc-50 hover:text-black active:translate-y-px focus:outline-none focus:ring-4 focus:ring-zinc-200">
                    Powrót do listy książek
                </a>
            </div>
            {#        {% if is_granted('ROLE_USER') %}#}
            {#            <a href="{{ path('book_edit', {id: book.id}) }}" class="btn btn-primary">Edytuj książkę</a>#}
            {#            <form action="{{ path('book_delete', {id: book.id}) }}" method="post" class="d-inline">#}
            {#                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">#}
            {#                <button type="submit" class="btn btn-danger">Usuń książkę</button>#}
            {#            </form>#}
            {#        {% endif %}#}
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}
{% block title %}Edytuj książkę - {{ book.title }}{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto mt-10 px-4">
        <h1 class="text-3xl font-semibold tracking-tight text-zinc-900 mb-6">Edytuj książkę: {{ book.title }}</h1>

        <form method="post" action="{{ path('book_edit', {id: book.id}) }}"
              class="space-y-5 rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm">
            <div>
                <label for="title" class="block text-sm font-medium text-zinc-800 mb-1">Tytuł</label>
                <input type="text" id="title" name="title" value="{{ book.title }}" required
                       class="w-full rounded-xl border border-zinc-300 bg-white px-3 py-2.5 text-zinc-900 placeholder:text-zinc-400 shadow-sm outline-none transition focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100">
            </div>

            <div>
                <label for="author" class="block text-sm font-medium text-zinc-800 mb-1">Autor</label>
                <input type="text" id="author" name="author" value="{{ book.author }}" required
                       class="w-full rounded-xl border border-zinc-300 bg-white px-3 py-2.5 text-zinc-900 placeholder:text-zinc-400 shadow-sm outline-none transition focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100">
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-zinc-800 mb-1">Opis</label>
                <textarea id="description" name="description" rows="4"
                          class="w-full rounded-xl border border-zinc-300 bg-white px-3 py-2.5 text-zinc-900 placeholder:text-zinc-400 shadow-sm outline-none transition focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100">{{ book.description }}</textarea>
            </div>

            <div>
                <label for="status" class="block text-sm font-medium text-zinc-800 mb-1">Status</label>
                <select id="status" name="status"
                        class="w-full rounded-xl border border-zinc-300 bg-white px-3 py-2.5 text-zinc-900 shadow-sm outline-none transition focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100">
                    <option value="planned" {% if book.status == 'planned' %}selected{% endif %}>Planowana</option>
                    <option value="reading" {% if book.status == 'reading' %}selected{% endif %}>Czytana</option>
                    <option value="read" {% if book.status == 'read' %}selected{% endif %}>Przeczytana</option>
                </select>
            </div>

            <div>
                <button type="submit"
                        class="inline-block rounded-xl border border-zinc-300 bg-sky-500 px-5 py-2.5 text-sm font-medium text-white shadow-sm transition hover:bg-zinc-50 hover:text-black active:translate-y-px focus:outline-none focus:ring-4 focus:ring-zinc-200 cursor-pointer">
                    Zapisz zmiany
                </button>
                <a href="{{ path('book_show', {id: book.id}) }}"
                   class="inline-block rounded-xl border border-zinc-300 bg-sky-500 px-5 py-2.5 text-sm font-medium text-white shadow-sm transition hover:bg-zinc-50 hover:text-black active:translate-y-px focus:outline-none focus:ring-4 focus:ring-zinc-200">
                    Powrót do szczegółów książki
                </a>
            </div>
        </form>
    </div>
{% endblock %}

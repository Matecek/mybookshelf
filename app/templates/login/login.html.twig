{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 px-4">
        <div class="rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm">
            <h1 class="text-2xl font-semibold tracking-tight text-zinc-900 mb-6 text-center">Logowanie</h1>

            {% if error %}
                <div class="mb-4 p-3 rounded-lg bg-red-50 border border-red-200">
                    <div class="text-red-700 text-sm">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                </div>
            {% endif %}

            <form method="post" action="{{ path('app_login') }}">
                <div class="mb-4">
                    <label for="email" class="block font-medium text-zinc-800 mb-1">Email</label>
                    <input type="email"
                           value="{{ last_username }}"
                           name="email"
                           id="email"
                           class="w-full rounded-xl border border-zinc-300 bg-white px-3 py-2.5 text-zinc-900 shadow-sm outline-none transition focus:border-sky-500 focus:ring-4 focus:ring-sky-100"
                           autocomplete="email"
                           required
                           autofocus>
                </div>

                <div class="mb-6">
                    <label for="password" class="block font-medium text-zinc-800 mb-1">Hasło</label>
                    <input type="password"
                           name="password"
                           id="password"
                           class="w-full rounded-xl border border-zinc-300 bg-white px-3 py-2.5 text-zinc-900 shadow-sm outline-none transition focus:border-sky-500 focus:ring-4 focus:ring-sky-100"
                           autocomplete="current-password"
                           required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="w-full rounded-xl bg-sky-500 px-5 py-2.5 text-sm font-medium text-white shadow-sm transition hover:bg-sky-600 active:translate-y-px focus:outline-none focus:ring-4 focus:ring-sky-200"
                        type="submit">
                    Zaloguj się
                </button>
            </form>

            <div class="my-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">lub</span>
                    </div>
                </div>
            </div>

            <div class="space-y-3">
                <a href="{{ path('connect_google_start') }}"
                   class="w-full flex items-center justify-center px-4 py-2.5 border border-gray-300 rounded-xl shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 transition">
                    <svg class="w-3 h-3 mr-2" viewBox="0 0 24 24">
                        <path fill="#4285f4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34a853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#fbbc05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#ea4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    Zaloguj przez Google
                </a>
            </div>

            <div class="mt-4 text-center">
                <p class="text-sm text-gray-600">
                    Nie masz konta?
                    <a href="{{ path('app_register') }}" class="font-medium text-green-600 hover:text-green-800">
                        Zarejestruj się
                    </a>
                </p>
                <div class="mt-2">
                    <a href="{{ path('home') }}" class="text-sm text-sky-600 hover:text-sky-800">
                        Powrót na stronę główną
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
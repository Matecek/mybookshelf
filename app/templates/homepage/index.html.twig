{% extends 'base.html.twig' %}

{% block title %}MyBookShell{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto mt-10 px-4">
        <div class="rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm">
            <h1 class="text-3xl font-semibold tracking-tight text-zinc-900 mb-6">Książki w bazie</h1>


            {% if books is empty %}
                <div class="bg-blue-100 text-blue-800 p-4 rounded-lg">Brak danych w bazie.</div>
                {% if not app.user %}
                    <div class="p-4">
                        Zaloguj się, aby zobaczyć książki.
                    </div>
                {% endif %}
            {% else %}
                <div class="overflow-x-auto rounded-xl border border-zinc-200">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tytuł</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Autor</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Średnia Ocena</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dodano</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Właściciel (email)</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 text-sm text-zinc-700">
                        {% for b in books %}
                            {% set userStatus = b.getStatusForUser(app.user) %}
                            <tr onclick="window.location='{{ path('book_show', {id: b.id}) }}'"
                                class="cursor-pointer hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4">{{ b.title }}</td>
                                <td class="px-6 py-4">{{ b.author }}</td>
                                <td class="px-6 py-4">
                                    {% if userStatus == 'reading' %}Czytana
                                    {% elseif userStatus == 'finished' %}Przeczytana
                                    {% else %}Planowana{% endif %}
                                </td>
                                <td class="px-6 py-4">{{ b.averageRating is not null ? b.averageRating ~ '/10' : '—' }}</td>
                                <td class="px-6 py-4">{{ b.createdAt|date('Y-m-d H:i') }}</td>
                                <td class="px-6 py-4">{{ b.user ? b.user.email : '—' }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
